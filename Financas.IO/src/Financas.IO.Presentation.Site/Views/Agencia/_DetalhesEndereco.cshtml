@model Financas.IO.Aplication.ViewModels.CadastrosBasico.Agencias.AgenciaViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Endereço da Agência</strong>
    </div>

    @if (Model.Endereco.AgenciaId != null)
    {
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Logradouro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Complemento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.CEP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Cidade.UF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco.Ativo)
                </th>
                <th></th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Numero)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Complemento)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.CEP)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Cidade.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Cidade.UF)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Endereco.Ativo)
                </td>
                <td>
                    <div>
                        @{
                            if (Model.Ativo)
                            {
                                <a asp-action="AtualizarEndereco" asp-route-id="@Model.Id" data-modal="" class="btn btn-warning">
                                    <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                                </a>
                            }
                        }

                    </div>
                </td>
            </tr>

        </table>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    <a asp-action="IncluirEndereco" asp-route-id="@Model.Id" data-modal="" class="btn btn-info">
                        <span title="Incluir Endereço" class="glyphicon glyphicon-plus-sign"></span> Adicionar Endereço
                    </a>
                </th>
            </tr>
        </table>
    }
</div>
<script>
    AjaxModal();
</script> 