@using Financas.IO.Aplication.ViewModels.CadastrosBasico.Agencias
@model AgenciaViewModel

@{
    ViewData["Title"] = "Criar nova Agência";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Preencha todos os dados corretamente</h4>
        <hr />

        <vc:summary />

        <div class="form-group">
            <label asp-for="Banco" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                @Html.Partial("_Bancos")
