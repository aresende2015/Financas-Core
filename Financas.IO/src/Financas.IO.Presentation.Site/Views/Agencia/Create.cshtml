            </div>
        </div>

        <div class="form-group">
            <label asp-for="NumeroDaAgencia" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="NumeroDaAgencia" class="form-control" />
                <span asp-validation-for="NumeroDaAgencia" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NomeDaAgencia" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="NomeDaAgencia" class="form-control" />
                <span asp-validation-for="NomeDaAgencia" class="text-danger"></span>
            </div>
        </div>

        <div id="EnderecoForm">
            <hr />
            <h3>Endereço da Agência</h3>

            @Html.Partial("_EnderecoVertical")

            @*<div class="form-group">
                <label asp-for="Endereco.Logradouro" class="col-md-2 control-label"></label>
