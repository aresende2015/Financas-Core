                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Numero" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Endereco.Numero" class="form-control" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Complemento" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Endereco.Complemento" class="form-control" />
                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Bairro" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Endereco.Bairro" class="form-control" />
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.CEP" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Endereco.CEP" class="form-control" />
                    <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Cidade.UF" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    @Html.Partial("_Estados")
                    <span asp-validation-for="Endereco.Cidade.UF" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Cidade" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input type="text" id="txt-cidade" class="form-control" value="@ViewBag.CidadeDescricao" />
                    <input type="hidden" id="hidden-cidade" name="Endereco.CidadeId" value="@ViewBag.CidadeId" />
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
            </div>*@

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btSubmit" value="Registrar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>

