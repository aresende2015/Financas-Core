@model IEnumerable<Financas.IO.Aplication.ViewModels.CadastrosBasico.Agencias.AgenciaViewModel>

@{
    ViewData["Title"] = "Lista de Agências";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <a asp-action="Create" class="btn btn-primary">
                <span title="Nova Agência" class="glyphicon glyphicon-plus-sign"></span> Nova Agência
            </a>
        </div>
    </div>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Banco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDaAgencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeDaAgencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Banco.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDaAgencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDaAgencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
