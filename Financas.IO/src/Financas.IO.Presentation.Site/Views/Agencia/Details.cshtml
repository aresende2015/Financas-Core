@model Financas.IO.Aplication.ViewModels.CadastrosBasico.Agencias.AgenciaViewModel

@{
    ViewData["Title"] = "Detalhes da Agência";
}

<h2>@ViewData["Title"]</h2>

<div class="form-horizontal">
    <div>
        <hr />

        <div class="form-group">
            <label asp-for="Banco" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Banco.Descricao" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NumeroDaAgencia" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="NumeroDaAgencia" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NomeDaAgencia" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="NomeDaAgencia" class="form-control" disabled />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @{
                    if (Model.Ativo)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar Agência</a>
                    }
                    <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
                }
            </div>
        </div>
    </div>
    <div id="EnderecoForm">
        <div id="EnderecoTarget">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Endereço da Agência</strong>
                </div>
                @Html.Partial("_EnderecoHorizontal")
            </div>
        </div>
    </div>
</div>
